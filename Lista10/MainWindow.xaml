<Window x:Class="Lista10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista10"
        mc:Ignorable="d"
        Title="Notatnik" Height="450" Width="800">
    <Grid Background="PaleVioletRed">
        <Button Content="Zapisz plik" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="75" RenderTransformOrigin="-2.194,0.502" Click="Button_Save_File"/>
        <Button Content="Otwórz plik" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="75" Margin="80,0,0,0" Click="Button_Open_File" />
        <TextBox 
            Name="TextBox"
            TextWrapping="Wrap" 
            Background="Pink" 
            VerticalScrollBarVisibility="Visible"
            AcceptsReturn="True" Margin="0,24,0,0" TextChanged="TextBox_TextChanged"/>
    </Grid>
    

</Window>
